# GitHub Actions CI environment configuration

# Certificate generation
export CREATE_LOCAL_CERTS=true

# Harbor configuration for CI
export HARBOR_HOSTNAME=localhost
export HARBOR_DATA_VOLUME_PATH=`pwd`/data
export HARBOR_NGINX_CERT_LOCATION=`pwd`/cert.pem
export HARBOR_NGINX_KEY_LOCATION=`pwd`/key.pem

# OpenTofu configuration for CI
export HARBOR_URL="http://localhost"
export HARBOR_PASSWORD="Harbor12345"

# OIDC disabled for CI testing
# export TF_VAR_GOOGLE_OIDC_CLIENT_ID=""
# export TF_VAR_GOOGLE_OIDC_CLIENT_SECRET=""
