# Production environment configuration template
# Copy this file to config/production.env and customize for your production environment

# Harbor configuration for production
export HARBOR_HOSTNAME=harbor.yourdomain.com
export HARBOR_DATA_VOLUME_PATH=/opt/harbor/data
export HARBOR_NGINX_CERT_LOCATION=/etc/ssl/certs/harbor.crt
export HARBOR_NGINX_KEY_LOCATION=/etc/ssl/private/harbor.key

# OpenTofu configuration for production
export HARBOR_URL="https://harbor.yourdomain.com"
export HARBOR_PASSWORD="CHANGE_ME_SECURE_PASSWORD"

# Production OIDC configuration
export TF_VAR_GOOGLE_OIDC_CLIENT_ID="your-client-id.apps.googleusercontent.com"
export TF_VAR_GOOGLE_OIDC_CLIENT_SECRET="your-client-secret"

# Certificate generation - typically false for production (use real certs)
export CREATE_LOCAL_CERTS=false
