# REPLICA Harbor environment configuration template
# Copy this file to config/replica.env and customize for your REPLICA Harbor deployment

# Harbor configuration for REPLICA instance
export HARBOR_HOSTNAME=harbor-replica-uswest2.yourdomain.com
export HARBOR_DATA_VOLUME_PATH=`pwd`/data
export HARBOR_HTTPS_ENABLED=true
export HARBOR_NGINX_CERT_LOCATION=`pwd`/cert.pem
export HARBOR_NGINX_KEY_LOCATION=`pwd`/key.pem
export HARBOR_ADMIN_PASSWORD="CHANGE_ME_SECURE_PASSWORD"

# OpenTofu configuration for REPLICA
export HARBOR_URL="https://${HARBOR_HOSTNAME}"
export HARBOR_PASSWORD="${HARBOR_ADMIN_PASSWORD}"

# Registry mode configuration for Terraform
export TF_VAR_harbor_registry_mode="REPLICA"
export TF_VAR_harbor_core_hostname="harbor-core.yourdomain.com"

# Certificate generation - typically false for production (use real certs)
export CREATE_LOCAL_CERTS=false

# Nginx
export NGINX_MODE="REAPLICA"
export NGINX_CERT_LOCATION=`pwd`/cert.pem
export NGINX_KEY_LOCATION=`pwd`/key.pem

# OIDC configuration
export TF_VAR_GOOGLE_OIDC_CLIENT_ID="XXXXXXXXXXXXXXXXXX-client-id.apps.googleusercontent.com"
export TF_VAR_GOOGLE_OIDC_CLIENT_SECRET="XXXXXXXXXXXXXXXXXX"