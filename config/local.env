# Local development environment configuration
# This file is for local development and testing

# Harbor configuration for local development
export HARBOR_HOSTNAME=localhost
export HARBOR_DATA_VOLUME_PATH=`pwd`/data
export HARBOR_HTTPS_ENABLED=true
export HARBOR_NGINX_CERT_LOCATION=`pwd`/cert.pem
export HARBOR_NGINX_KEY_LOCATION=`pwd`/key.pem
export HARBOR_ADMIN_PASSWORD="Harbor12345"

# OpenTofu configuration for local development
export HARBOR_URL="http://${HARBOR_HOSTNAME}:8080"
export HARBOR_PASSWORD="${HARBOR_ADMIN_PASSWORD}"

# Registry mode configuration for Terraform
export TF_VAR_harbor_registry_mode="REPLICA"
export TF_VAR_harbor_core_hostname="core.mirror.gpkg.io"  # Not needed for CORE mode

# Certificate generation - false for local development (disables self-signed certs)
export CREATE_LOCAL_CERTS=true

# Nginx
export NGINX_MODE="REPLICA"
export NGINX_CERT_LOCATION=`pwd`/cert.pem
export NGINX_KEY_LOCATION=`pwd`/key.pem

# OIDC configuration
export TF_VAR_GOOGLE_OIDC_CLIENT_ID="XXXXXXXXXXXXXXXXXX-client-id.apps.googleusercontent.com"
export TF_VAR_GOOGLE_OIDC_CLIENT_SECRET="XXXXXXXXXXXXXXXXXX"