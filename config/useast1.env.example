# US East 1 region environment configuration template
# Copy this file to config/useast1.env and customize for your US East 1 deployment

# Harbor configuration for US East 1
export HARBOR_HOSTNAME=harbor-use1.yourdomain.com
export HARBOR_DATA_VOLUME_PATH=/opt/harbor/data
export HARBOR_NGINX_CERT_LOCATION=/etc/ssl/certs/harbor-use1.crt
export HARBOR_NGINX_KEY_LOCATION=/etc/ssl/private/harbor-use1.key

# OpenTofu configuration for US East 1
export HARBOR_URL="https://harbor-use1.yourdomain.com"
export HARBOR_PASSWORD="CHANGE_ME_SECURE_PASSWORD"

# US East 1 OIDC configuration
export TF_VAR_GOOGLE_OIDC_CLIENT_ID="your-use1-client-id.apps.googleusercontent.com"
export TF_VAR_GOOGLE_OIDC_CLIENT_SECRET="your-use1-client-secret"

# Certificate generation - typically false for production (use real certs)
export CREATE_LOCAL_CERTS=false
