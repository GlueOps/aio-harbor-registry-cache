# CORE Harbor environment configuration template
# Copy this file to config/core.env and customize for your CORE Harbor deployment

# Harbor configuration for CORE instance
export HARBOR_HOSTNAME=harbor-core.yourdomain.com
export HARBOR_DATA_VOLUME_PATH=`pwd`/data
export HARBOR_HTTPS_ENABLED=true
export HARBOR_NGINX_CERT_LOCATION=`pwd`/cert.pem
export HARBOR_NGINX_KEY_LOCATION=`pwd`/key.pem
export HARBOR_ADMIN_PASSWORD="Harbor12345"

# OpenTofu configuration for CORE
export HARBOR_URL="https://${HARBOR_HOSTNAME}"
export HARBOR_PASSWORD="${HARBOR_ADMIN_PASSWORD}"

# Registry mode configuration for Terraform
export TF_VAR_harbor_registry_mode="CORE"
# export TF_VAR_harbor_core_hostname=""  # Not needed for CORE mode

# Certificate generation - typically false for production (use real certs)
export CREATE_LOCAL_CERTS=false

# Nginx
export NGINX_MODE="CORE"
export NGINX_CERT_LOCATION=`pwd`/cert.pem
export NGINX_KEY_LOCATION=`pwd`/key.pem


# OIDC configuration
export TF_VAR_GOOGLE_OIDC_CLIENT_ID="github-actions-client-id.apps.googleusercontent.com"
export TF_VAR_GOOGLE_OIDC_CLIENT_SECRET="github-actions-client-secret"